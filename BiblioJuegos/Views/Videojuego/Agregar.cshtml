@model BiblioJuegos.ViewModels.VideojuegoVM.VideojuegoVMFormulario

@{
    ViewData["Title"] = "Agregar";
}
<h1 class="text-center">Agregar videojuego</h1>

<hr />
<div class="row">
    <div class="col-md-4">

        <form asp-action="Agregar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control"/>
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control"/>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lanzamiento" class="control-label"></label>
                <input asp-for="Lanzamiento" class="form-control"/>
                <span asp-validation-for="Lanzamiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImagenURL" class="control-label"></label>
                <input asp-for="ImagenURL" class="form-control"/>
                <span asp-validation-for="ImagenURL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Categorias" class="control-label"></label>
                <select asp-for="CategoriaId" asp-items="@(new SelectList(Model.Categorias, "Id", "Nombre"))" class="form-control">
                    <option value="" hidden disabled selected>Seleccione una categoría.</option>
                </select>
                <span asp-validation-for="CategoriaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Companias" class="control-label"></label>
                <select asp-for="CompaniaId" asp-items="@(new SelectList(Model.Companias, "Id", "Nombre"))" class="form-control">
                    <option value="" hidden disabled selected>Seleccione una compañía.</option>
                </select>
                <span asp-validation-for="CompaniaId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Plataformas" class="control-label"></label>
                <select asp-for="PlataformaId" asp-items="@(new SelectList(Model.Plataformas, "Id", "Nombre"))" class="form-control">
                    <option value="" hidden disabled selected>Seleccione una plataforma.</option>
                </select>
                <span asp-validation-for="CompaniaId" class="text-danger"></span>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <button class="btn btn-success btn-block" type="submit"><i class="fas fa-check-square"></i> Aceptar</button>
                </div>
                <div class="form-group col-md-6">
                    <a asp-action="Index" class="btn btn-danger btn-block"><i class="far fa-window-close"></i> Cancelar</a>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
